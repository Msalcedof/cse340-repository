<h1>Add Vehicle</h1>

<% if (message) { %>
  <p class="notice"><%= message %></p>
<% } %>

<form method="post" action="/inv/add-inventory" novalidate>

  <%- classificationList %>

  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="make" value="<%= make %>" required />

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="model" value="<%= model %>" required />

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="year" value="<%= year %>" required />

  <label for="description">Description</label>
  <textarea id="description" name="description" required><%= description %></textarea>

  <label for="miles">Miles</label>
  <input type="number" id="miles" name="miles" value="<%= miles %>" required />

  <label for="price">Price</label>
  <input type="number" step="0.01" id="price" name="price" value="<%= price %>" required />

  <label for="color">Color</label>
  <input type="text" id="color" name="color" value="<%= color %>" required />

  <label for="image">Image Path</label>
  <input type="text" id="image" name="image" value="<%= image %>" required />

  <label for="thumbnail">Thumbnail Path</label>
  <input type="text" id="thumbnail" name="thumbnail" value="<%= thumbnail %>" required />

  <button type="submit">Add Vehicle</button>
</form>
